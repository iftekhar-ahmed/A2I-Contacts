        android:layout_weight="0.25"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="@android:drawable/sym_action_chat"/>
    <ImageButton
        android:layout_weight="0.25"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="@android:drawable/sym_action_email"/>
</LinearLayout>