<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/list_item_vertical_margin"
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingLeft="@dimen/list_item_horizontal_margin"
    android:paddingRight="0dp"
    android:background="@drawable/list_item_selector">

    <TextView
        android:id="@+id/textview_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here goes the contact name"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No"
        android:id="@+id/textView_contact_no"
        android:inputType="phone"
        android:layout_below="@+id/imageButton_call_contact"
        android:layout_alignLeft="@+id/textview_contact_name"
        android:layout_alignStart="@+id/textview_contact_name" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_call_contact"
        android:background="@android:drawable/sym_action_call"
        android:contentDescription="Call Contact"
        android:layout_alignTop="@+id/textview_contact_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/list_item_horizontal_margin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_msg_contact"
        android:background="@android:drawable/sym_action_chat"
        android:contentDescription="Message Contact"
        android:layout_alignTop="@+id/imageButton_call_contact"
        android:layout_toLeftOf="@+id/imageButton_call_contact"
        android:layout_marginRight="@dimen/list_item_horizontal_margin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_email_contact"
        android:background="@android:drawable/sym_action_email"
        android:contentDescription="Email Contact"
        android:layout_alignTop="@+id/imageButton_call_contact"
        android:layout_toLeftOf="@+id/imageButton_msg_contact"
        android:layout_marginRight="@dimen/list_item_horizontal_margin" />
</RelativeLayout>